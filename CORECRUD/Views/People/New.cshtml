@model CORECRUD.Models.People;

@{
	Layout = "_Shared";
}

<h1 class="mt-4">Personel Ekle/Güncelle</h1>
<br />

<form method="post">
	@Html.LabelFor(x => x.PeopleID)
	@Html.TextBoxFor(x => x.PeopleID, new { @class = "form-control" })

	@Html.LabelFor(x => x.Name)
	@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

	@Html.LabelFor(x => x.Surname)
	@Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })

	@Html.LabelFor(x => x.City)
	@Html.TextBoxFor(x => x.City, new { @class = "form-control" })

	 
	<br />
	<button class="btn btn-success">Yeni Departman Kaydet</button>

</form>